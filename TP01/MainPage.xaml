<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP01.MainPage"
             BackgroundColor="Black"
             Padding="30">

    <VerticalStackLayout Spacing="20" HorizontalOptions="Center">

        <Label Text="Aplicação Teste"
               FontSize="24"
               TextColor="White"
               HorizontalOptions="Center" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Label Text="ID:" TextColor="White" VerticalOptions="Center"/>
            <Entry x:Name="entryID" WidthRequest="150" BackgroundColor="White" TextColor="Black"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Label Text="Pass" TextColor="White" VerticalOptions="Center"/>
            <Entry x:Name="entryPass" WidthRequest="150" IsPassword="True" BackgroundColor="White" TextColor="Black"/>
        </StackLayout>

        <Button Text="OK" BackgroundColor="Gray" TextColor="Maroon" Clicked="OnOkClicked"/>
        <Button Text="Limpar" BackgroundColor="Gray" TextColor="Maroon" Clicked="OnClearClicked"/>
        <Button Text="Créditos" BackgroundColor="Gray" TextColor="Maroon" Clicked="OnCreditsClicked"/>

    </VerticalStackLayout>
</ContentPage>
